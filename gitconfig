[color]
  ui = true
  sh = auto
[push]
  default = simple
[core]
  excludesfile = ~/.gitexcludes
[credential]
  helper = osxkeychain
[help]
  autocorrect = 1
[alias]
  # Favorites
  ps  = push
  b   = branch
  aa  = add --all
  ra  = reset .
  co  = checkout
  coa = ! git checkout .
  reset-origin = ! git fetch && git reset --hard origin/$(git current-branch)

  # Picking
  pick    = ! git branch | grep -v "^*" | cut -c 3- | pick
  pco     = ! git pick | xargs git checkout
  dbranch = ! git pick | xargs git branch -d
  Dbranch = ! git pick | xargs git branch -D

  # Emails and Authors
  fsearch  = ! git ls-files | grep -i
  authors  = ! git log --all --format='%aN' | sort -u
  emails   = ! git log --all --format='%cE' | sort -u
  me       = ! git ls --since 7.days.ago --author `git config user.email` --branches

  # Master is now a verb
  master          = checkout master
  current-branch  = rev-parse --abbrev-ref HEAD
  last-branch     = ! git rev-parse --symbolic-full-name @{-1} | cut -f3 -d'/'

  # Committing
  cm      = commit -v
  amend   = commit --amend
  famend  = ! git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend

  # Diffing
  d = diff
  ds = diff --staged

  # Logging and Graphing
  ls = log --pretty='format:%Cred%h%Creset %Cblue%ad%Cred%d %Creset%s%Cgreen [%cn]%Creset' --decorate --date=short
  lsv = ! git ls --numstat
  graph = log --graph --pretty='format:%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(blue){%an}%Creset' --abbrev-commit --date=relative

  co-pr = "! f() { git fetch origin pull/$1/head:pull-request-$1 && git checkout pull-request-$1; }; f"

  # Amending and resetting
  fixlast = reset --soft HEAD^
  rollback = reset --hard HEAD@{1}

  # Diff of current branch to other branches.
  # Hope to move these into their own shell scripts
  # for better customizing
  dpr = ! git diff origin/$(git current-branch)..
  npr = ! git log origin/$(git current-branch).. --oneline
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
[include]
  path = .gitconfig.local
[filter "media"]
  clean = git media clean %f
  smudge = git media smudge %f
  required = true
[color "sh"]
  dirty = red
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[init]
