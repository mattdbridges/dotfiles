[color]
  ui = true
[push]
  default = upstream
[core]
  excludesfile = ~/.gitexcludes
[credential]
  helper = osxkeychain
[alias]
  # Favorites
  c = commit
  s = status -b
  a = add
  b = branch
  r = reset
  m = merge
  aa = add .
  ra = reset .

  # Emails and Authors
  authors = ! git log --all --format='%aN' | sort -u
  emails = ! git log --all --format='%cE' | sort -u
  standup = ! git log --since yesterday --author `git config user.email` --pretty=short

  # Don't Repeat Yourself
  this = ! git init && git add . && git commit -m "initial commit"

  # Master is now a verb
  master = checkout master

  # Pushing and pulling
  ps = push

  # Committing
  amend = commit --amend
  famend = !git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
  cm = commit -m
  co = checkout
  coa = ! git co . && git s

  # Logging and diffing aliases
  d = diff
  ds = diff --staged
  lgs = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  graph = log --graph --pretty='format:%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(blue){%an}%Creset' --abbrev-commit --date=relative

  # Amending and resetting
  fixlast = reset --soft HEAD^
  rollback = reset â€“hard HEAD@{1}

  # Diff of current branch to other branches.
  # Hope to move these into their own shell scripts
  # for better customizing
  np = log master.. --oneline # Diff from local master
  npr = log origin/master.. --oneline # Diff from remote master
[include]
  path = .gitconfig.local
