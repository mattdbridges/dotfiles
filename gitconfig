[color]
  ui = true
  sh = auto
[merge]
  edit = no
[push]
  default = current
[core]
  excludesfile = ~/.gitexcludes
  editor = nvim
[credential]
  helper = osxkeychain
[help]
  autocorrect = 1
[alias]
  # Favorites
  ps  = push -u
  b   = branch
  aa  = add --all
  ra  = reset .
  co  = checkout
  coa = ! git checkout .
  reset-origin = ! git reset-branch $(git current-branch)
  track = "! f() { git fetch origin && git checkout -t origin/$1; }; f"
  co-pr = "! f() { git fetch origin pull/$1/head:pull-request-$1 && git checkout pull-request-$1; }; f"

  # Cleaning up
  cleanup = "! f() { git checkout master && git reset-origin && git merged-branches-delete && git remote prune origin && git checkout -; }; f"
  merged-branches        = ! git branch --merged | grep -v "\\\\*"
  merged-branches-delete = ! git merged-branches | xargs git branch -D

  # Picking
  pick    = ! git branch | grep -v "^*" | fzf-tmux -d 15
  pco     = ! git pick | xargs git checkout
  dbranch = ! git pick | xargs git branch -d
  Dbranch = ! git pick | xargs git branch -D

  # Emails and Authors
  fsearch  = ! git ls-files | grep -i
  authors  = ! git log --all --format='%aN' | sort -u
  emails   = ! git log --all --format='%cE' | sort -u
  me       = ! git ls --since 3.days.ago --author `git config user.email` --branches
  yesterday = ! git ls --since 1.day.ago --author `git config user.email` --branches

  # Master is now a verb
  master          = checkout master
  current-branch  = rev-parse --abbrev-ref HEAD
  last-branch     = ! git rev-parse --symbolic-full-name @{-1} | cut -f3 -d'/'

  # Temporarily ignoring changings for certain files
  ignore-file   = update-index --assume-unchanged
  remember-file = update-index --no-assume-unchanged

  # Committing
  cm      = commit -v
  amend   = commit --amend --date=now
  commend = ! git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend --date=now

  # Diffing
  d = diff
  ds = diff --staged

  # Logging and Graphing
  ls = log --pretty='format:%Cred%h%Creset %Cblue%ai%Cred%d %Creset%s%Cgreen [%cn]%Creset' --decorate --date=short
  lsv = ! git ls --numstat
  graph = log --graph --pretty='format:%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(blue){%an}%Creset' --abbrev-commit --date=relative

  # Amending and resetting
  fixlast = reset --soft HEAD^
  rollback = reset --hard HEAD@{1}

  # Diff of current branch to other branches.
  # Hope to move these into their own shell scripts
  # for better customizing
  unpushed = ! git log origin/$(git current-branch).. --oneline
  unpushed-stat = ! git diff origin/$(git current-branch)..
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
[include]
  path = .gitconfig.local
[filter "media"]
  clean = git media clean %f
  smudge = git media smudge %f
  required = true
[color "sh"]
  dirty = red
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[init]
