set -e

executable=$1;

if [ -z $executable ]; then
  echo "Usage: tryrust [EXECUTABLE]"
  exit
fi

if [ ! -f ./$executable.rs ]; then
  echo "File '$executable.rs' does not exist"
  exit
fi

# Compile + Execute
rustc $executable.rs -o $executable
time ./$executable

# Cleanup
rm $executable
rm -r ./*.dSYM
