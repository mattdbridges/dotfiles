{{- $email := get . "email" -}}
{{- if not $email -}}
{{-   $email = promptString "email" -}}
{{- end -}}

{{- $name := get . "name" -}}
{{- if not $name -}}
{{-   $name = promptString "name" -}}
{{- end -}}

sourceDir = "{{ .chezmoi.homeDir }}/.dotfiles"

[data.github]
  name = {{ $name | quote }}
  email = {{ $email | quote }}
  signingkey = ""

[data.bundler]
  contribsys = ""

[diff]
  pager = "delta"
