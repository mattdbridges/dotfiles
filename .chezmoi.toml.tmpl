{{- $minimal := false -}}
{{- $secrets := false -}}

{{- $name := get . "name" -}}
{{- $email := get .  "email" -}}

{{- if (env "DOTFILES_MINIMAL") -}}
{{- $minimal = true -}}
{{- $secrets = false -}}
{{- end }}

{{- if (env "ASK") -}}
{{- $name = promptString "Name" -}}
{{- $email = promptString "Email" -}}
{{- end }}

{{- if (or (not $name) (not $email)) -}}
{{- $name = promptString "Name" -}}
{{- $email = promptString "Email" -}}
{{- end -}}

sourceDir = "{{ .chezmoi.homeDir }}/.dotfiles"

[data]
  minimal = {{ $minimal }}
  secrets = {{ $secrets }}
  name = {{ $name | quote }}
  email = {{ $email | quote }}
  signingkey = "AA59D211400B6FC9"

[data.spicetify]
  theme = "Dribbblish"
  scheme = "nord-dark"

[data.bitwarden]
  tokens = "acd12069-1b34-494a-9162-ad5a00cb6d23"
  ssh = "fece7bf2-ac0c-4787-b13a-ad5c0120fd96"
  gpg = "777536fd-671b-4267-a788-ad5c012a7d98"

[diff]
